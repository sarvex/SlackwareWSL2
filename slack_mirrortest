ylw=$(tput setaf 3)
txtrst=$(tput sgr0)

# Add or change mirrors from /etc/slackpkg/mirrors as desired.
# Just place them between the read line and the EOF at the end. No quotes are necessary.
read -r -d '' MIRRORS <<'EOF'
